//- Стандартный шаблон страницы
- var isDeploy = false

if isDeploy === true
	- var pageAddress = '/kolibri'
else
	- var pageAddress = ''

include mixins.pug

doctype html
html(class='no-js', lang='ru-RU')
	head
		if isDeploy === true
			base(href='https://motosasha.github.io/kolibri/')
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, user-scalable=yes, initial-scale=1, maximum-scale=3, minimum-scale=0.1')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		meta(name='format-detection', content='telephone=no')
		meta(name='format-detection', content='date=no')
		meta(name='format-detection', content='address=no')
		meta(name='format-detection', content='email=no')
		meta(name='google', content='notranslate')
		meta(name='HandheldFriendly' content='true')
		meta(name='robots', content='index, follow')

		link(rel='apple-touch-icon' sizes='180x180' href='img/favicon/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='img/favicon/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='img/favicon/favicon-16x16.png')
		link(rel='manifest' href='img/favicon/site.webmanifest')
		link(rel='mask-icon' href='img/favicon/safari-pinned-tab.svg' color='#f10132')
		meta(name='msapplication-TileColor' content='#f10132')
		meta(name='theme-color' content='#ffffff')

		link(rel='preconnect', href='https://fonts.googleapis.com')
		link(rel='preconnect', href='https://fonts.gstatic.com' crossorigin)
		link(href='https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;600&display=swap' rel='stylesheet')

		meta(name='msapplication-TileColor' content='#f10132')
		meta(name='theme-color' content='#f10132')

		block meta
			title Колибри — спортивный клуб художественной гимнастики
			meta(name='description', content='')
			meta(name='keywords', content='')

		block head
			link(rel="stylesheet" href="css/style.css")

	body
		noscript У вас отключен JavaScript. Это пугает.

		.page
			.page__main
				block pageMain
					.fake-content fake-content
